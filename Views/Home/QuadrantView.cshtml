@{
    ViewData["Title"] = "Task List";
}

@model List<TaskResponse>

<head>

    <style type="text/css">
        table {
            border-collapse: collapse;
            width: 100%;
            margin: 20px 0;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .quadrant-one {
            background-color: #f44336;
            color: #fff;
        }

        .quadrant-two {
            background-color: #ffc107;
            color: #000;
        }

        .quadrant-three {
            background-color: #4caf50;
            color: #fff;
        }

        .quadrant-four {
            background-color: #2196f3;
            color: #fff;
        }
    </style>

</head>
<body>
    <table>
        <tr>
            <th></th>
            <th>Urgent</th>
            <th>Not Urgent</th>
        </tr>
        <tr>
            <th>Important</th>
            <td class="quadrant-one">Quadrant One</td>

            @foreach (var x in Model)
            {
                @if (@x.Quadrant == 1)
                {
                    <td>@x.Task, Due: @x.DueDate, @x.Completed </td>
                }
            }
            <td class="quadrant-two">Quadrant Two</td>
            @foreach (var x in Model)
            {
                @if (@x.Quadrant == 2)
                {
                    <td>@x.Task, Due: @x.DueDate, @x.Completed </td>
                }
            }
        </tr>
        <tr>
            <th>Not Important</th>
            <td class="quadrant-three">Quadrant Three</td>
            @foreach (var x in Model)
            {
                @if (@x.Quadrant == 3)
                {
                    <td>@x.Task, Due: @x.DueDate, @x.Completed </td>
                }
            }

            <td class="quadrant-four">Quadrant Four</td>
            @foreach (var x in Model)
            {
                @if (@x.Quadrant == 4)
                {
                    <td>@x.Task, Due: @x.DueDate, @x.Completed </td>
                }
            }
        </tr>
    </table>
</body>